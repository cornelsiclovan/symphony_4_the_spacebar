{% extends 'content_base.html.twig' %}

{% block title %}Login{% endblock %}

{% block content_class %}{% endblock %}

{% block content_body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Login!</h1>
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                {{ form_start(form) }}
                    {{ form_row(form._username) }}
                    {{ form_row(form._password) }}

                    <button type="submit" class="btn btn-success">Login <span class="fa-lock"></span></button>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}